<!-- See documentation at http://doc.nuxeo.com/x/HgIz -->
<package type="addon" name="nuxeo-palette" version="@VERSION@">
  <!-- Give a useful title -->
  <title>Nuxeo palette</title>
  <description>
    <p>This plugin enables to order content of a folder on a grid.</p>
  </description>
  <!-- your hime page (optionnal) -->
  <home-page>https://github.com/fvadon/nuxeo-palette</home-page>
  <vendor>Nuxeo</vendor>
  <installer restart="true"/>
  <uninstaller restart="true"/>
  <hotreload-support>false</hotreload-support>
  <require-terms-and-conditions-acceptance>false
  </require-terms-and-conditions-acceptance>
  <nuxeo-validation>none</nuxeo-validation>
  <!-- <nuxeo-validation>inprocess</nuxeo-validation> -->
  <!-- <nuxeo-validation>primary_validation</nuxeo-validation> -->
  <!-- <nuxeo-validation>nuxeo_certified</nuxeo-validation> -->
  <!-- <production-state>proto</production-state> -->
  <production-state>development</production-state>
  <!-- <production-state>production_ready</production-state> -->
  <supported>false</supported>
  <platforms>
    <platform>cap-7.10</platform>
    <platform>cap-7.10-HF*</platform>
    <platform>cap-8.3</platform>
    <platform>cap-8.10-SNAPSHOT</platform>
  </platforms>
  <license>AL 2.0</license>
  <license-url>http://www.apache.org/licenses/LICENSE-2.0</license-url>
</package>
